<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorGreyButtonColor"
  android:orientation="vertical"
  tools:context="com.kaseka.totek.MainActivity">

  <include
    android:id="@+id/app_bar"
    layout="@layout/app_bar" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
      android:id="@+id/btn_ball_in_basket"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginRight="20dp"
      android:text="25"
      android:textColor="@color/colorAlmostWhite"
      android:textSize="30sp"
      android:visibility="invisible" />

    <Button
      android:id="@+id/button"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="80dp"
      android:layout_gravity="center_horizontal"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:background="@drawable/selector_draw_button"
      android:text="@string/draw_button_text"
      android:textColor="@color/colorAlmostWhite"
      android:textSize="30dp" />

    <View
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginLeft="20dp" />

  </LinearLayout>

  <ListView
    android:id="@+id/listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp" />


</LinearLayout>
