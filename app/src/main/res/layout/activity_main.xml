<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorGreyButtonColor"
  android:orientation="vertical"
  tools:context="com.kaseka.totek.MainActivity">

  <include
    android:id="@+id/app_bar"
    layout="@layout/app_bar" />

  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:text="@string/system_one_label"
    android:textSize="17dp" />

  <Button
    android:id="@+id/button"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:background="@drawable/selector_draw_button"
    android:text="@string/draw_button_text"
    android:textColor="@color/colorAlmostWhite"
    android:textSize="30dp" />

  <TextView
    android:id="@+id/tvUnusedBallInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:textSize="20dp" />


  <ListView
    android:id="@+id/listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"/>


</LinearLayout>
