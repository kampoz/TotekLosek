<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGreyButtonColor"
    tools:context="com.kaseka.totek.MainActivity">

    <include android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system_one_label"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/selector_draw_button"
        android:text="@string/draw_button_text"
        android:textSize="30dp"
        android:textColor="@color/colorAlmostWhite"
        android:id="@+id/button"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/tvUnusedBallInfo"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center"/>


    <ListView
        android:layout_marginTop="15dp"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>



</LinearLayout>
